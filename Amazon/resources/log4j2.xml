<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Properties>
		<Property name="basePath">./loged</Property>
	</Properties>

	<Appenders>

      <RollingFile name="File" fileName="${basePath}/log.log" filePattern="${basePath}/log-%d{dd-MM-yyyy-HH}.log">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />

			<SizeBasedTriggeringPolicy size="5 MB" />      <!--if we want to create new file after the current file reaches to expected size-->

		</RollingFile>

		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>

	</Appenders>

	<Loggers>
		<Root level="trace">
			<AppenderRef ref="File" />
		</Root>
	</Loggers>
</Configuration>